[BaseOS]
name=CentOS-%%CENTOSREL%% - Base
mirrorlist=http://mirrorlist.centos.org/?release=%%CENTOSREL%%&arch=$basearch&repo=BaseOS&infra=$infra
failovermethod=priority
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-centosofficial
gpgcheck=1
skip_if_unavailable=False

[AppStream]
name=CentOS-%%CENTOSREL%% - AppStream
mirrorlist=http://mirrorlist.centos.org/?release=%%CENTOSREL%%&arch=$basearch&repo=AppStream&infra=$infra
#baseurl=http://mirror.centos.org/centos/%%CENTOSREL%%/AppStream/$basearch/os/
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-centosofficial

[PowerTools]
name=CentOS-%%CENTOSREL%% - PowerTools
mirrorlist=http://mirrorlist.centos.org/?release=%%CENTOSREL%%&arch=$basearch&repo=PowerTools&infra=$infra
#baseurl=http://mirror.centos.org/centos/%%CENTOSREL%%/PowerTools/$basearch/os/
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-centosofficial

[extras]
name=CentOS-%%CENTOSREL%% - Extras
mirrorlist=http://mirrorlist.centos.org/?release=%%CENTOSREL%%&arch=$basearch&repo=extras&infra=$infra
#baseurl=http://mirror.centos.org/centos/%%CENTOSREL%%/extras/$basearch/os/
gpgcheck=1
enabled=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-centosofficial

[epel]
name=Extra Packages for Enterprise Linux %%CENTOSREL%% - $basearch
#baseurl=http://download.fedoraproject.org/pub/epel/%%CENTOSREL%%/$basearch
metalink=https://mirrors.fedoraproject.org/metalink?repo=epel-%%CENTOSREL%%&arch=$basearch
failovermethod=priority
enabled=1
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-EPEL-%%CENTOSREL%%

[copr-fepitre-epel-qubes]
name=Copr repo for epel-%%CENTOSREL%%-qubes owned by fepitre
baseurl=https://download.copr.fedorainfracloud.org/results/fepitre/epel-%%CENTOSREL%%-qubes/epel-8-$basearch/
type=rpm-md
skip_if_unavailable=True
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-copr-epel-%%CENTOSREL%%
repo_gpgcheck=0
enabled=1
enabled_metadata=1